<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/textGrey</item>
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="font"></style>

    <style name="usernameText" parent="@style/font">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:text">User name</item>
    </style>

    <style name="screennameText" parent="@style/font">
        <item name="android:textSize">12sp</item>
        <item name="android:text">\@screenname</item>
    </style>

    <style name="tweetText" parent="font">
        <item name="android:text">"Here goes your tweet. Enjoy #tag"</item>
        <item name="android:autoLink">all</item>
        <item name="android:linksClickable">true</item>
    </style>

    <style name="counterText" parent="font">
        <item name="android:textColor">@color/purple</item>
    </style>

    <style name="counterOverride" parent="font">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="SoftLeftPadding">
        <item name="android:paddingLeft">3dp</item>
    </style>

    <style name="CounterLabels" parent="SoftLeftPadding">
       <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="Counters">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="UserImage">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/ic_launcher</item>
        <item name="riv_corner_radius">4dip</item>
        <item name="riv_border_width">1dip</item>
        <item name="riv_border_color">@color/composeBackground</item>
        <item name="riv_mutate_background">true</item>
        <item name="riv_oval">false</item>
    </style>
</resources>
